@model AddProjectFormModel

@{
    ViewData["Title"] = "Add Project";
}

<div class="text-center">
    <h1 class="item-title">@ViewData["Title"]</h1>
</div>
<form method="post">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" id="validationTooltip01" placeholder="Name Your Project...">
        <span asp-validation-for="Name" class="small text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Type"></label>
        <input asp-for="Type" class="form-control" placeholder="MAN , GPON , Telenor...">
        <span asp-validation-for="Type" class="small text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Town"></label>
        <input asp-for="Town" class="form-control" placeholder="Choose Town...">
        <span asp-validation-for="Town" class="small text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Employee"></label>
        <input asp-for="Employee" class="form-control" placeholder="Milen Saykov...">
        <span asp-validation-for="Employee" class="small text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="EndDate"></label>
        <input asp-for="EndDate" class="form-control" placeholder="01/01/2000...">
        <span asp-validation-for="EndDate" class="small text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="StatusId"></label>
        <select asp-for="StatusId" class="form-control">
            @foreach (var status in Model.Statuses)
            {
                <option value="@status.Id">@status.Name</option>
            }
        </select>
    </div>

    @*<div class="form-group">
            <label for="exampleFormControlTextarea1">Example textarea</label>
            <textarea class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
        </div>*@
    <input class="btn btn-primary" type="submit" value="Save" />
</form>




