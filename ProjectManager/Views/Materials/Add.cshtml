@model AddMaterialFormModel
@{
    ViewData["Title"] = "Add Material";
}

<div class="text-center">
    <h1 class="item-title">@ViewData["Title"]</h1>
</div>
<form method="post">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" id="validationTooltip01" placeholder="Material name...">
        <span asp-validation-for="Name" class="small text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Type"></label>
        <input asp-for="Type" class="form-control" placeholder="Cable , ODF , Adaptor...">
        <span asp-validation-for="Type" class="small text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="SapNumber"></label>
        <input asp-for="SapNumber" class="form-control" placeholder="SAP Number...">
        <span asp-validation-for="SapNumber" class="small text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Price"></label>
        <input asp-for="Price" class="form-control" placeholder="Price...">
        <span asp-validation-for="Price" class="small text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Quantity"></label>
        <input asp-for="Quantity" class="form-control" placeholder="Quantity...">
        <span asp-validation-for="Quantity" class="small text-danger"></span>
    </div>
